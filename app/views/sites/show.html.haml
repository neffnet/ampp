%h1#site_name= @site.name

-if @events.any?
  #upcoming_events
    %h2 UPCOMING EVENTS
    %ul#events.small-block-grid-1.medium-block-grid-2.large-block-grid-3
      -@events.each do |e|
        %li
          .fb-event
            .text-center.date
              =e[:date] 
            =link_to e[:name], e[:link], class: 'event_name', target: '_blank'
            .text-center
              =link_to image_tag( e[:picture], alt: "#{e[:name]} flyer", title: "see full size flyer"), e[:cover], target: '_blank'
            %span.venue
              =e[:venue]
            \- #{e[:time]}
            %br
            .text-center
              =e[:address]
              =link_to ' (map)', "https://maps.google.com?q=#{e[:address]}", target: '_blank', class: 'map_link'
            %br
            =e[:description]
      
-if @photo_albums
  -@photo_albums.compact.each do |a|
    = link_to( '#', class: 'album-link', data: { 'id' => a[:id], 'name' => a[:name], 'reveal-id' => 'gallery', 'behavior' => "loadGallery" } ) do
      .album-preview
        = image_tag(a[:thumbnail], alt: a[:name])
        %h3= a[:name]

-if @site.albums.any?
  - content_for :bc_player do
    %h2 Listen
    - @site.albums.each do |a|
      = streaming_player(a)

