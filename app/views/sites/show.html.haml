%h1= @site.name
Facebook page ID: #{@site.facebook_page_id}
%br
%br

-if @events.any?
  %h2 Upcoming Events
  %br
  -@events.each do |e|
    .fb-event
      =p 'Name: ' 
      =content_tag :strong, e.name
      %br
      ID: #{e.id}
      %br
      Link: #{e.link}
      %br
      Venue: #{e.venue}
      %br
      Address: #{e.address}
      =link_to ' go to map', "https://maps.google.com?q=#{e.address}"
      %br
      Date: #{e.date}
      %br
      Time: #{e.time}
      %br
      Description: #{e.description}
      %br
      =link_to image_tag( e.picture, alt: e.name ), e.cover
      %br
      %br

-if @site.albums.any?
  - content_for :bc_player do
    %h2 Listen
    - @site.albums.each do |a|
      = streaming_player(a)

  